function add-path
    if test -d "$1"
        set PATH $PATH "$1"
    end
end

add-path '/usr/local/bin'  # Makes sure this comes before /usr/bin
add-path '/Library/Haskell/bin'
add-path "$HOME/Library/Haskell/bin"
add-path "$HOME/.bin"
add-path "$HOME/.cabal/bin"
add-path "$HOME/.gem/ruby/1.9.1/bin"
add-path "$HOME/.local/bin"
