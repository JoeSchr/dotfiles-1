#!/bin/bash

################################################################################
# General paths

function add-path() {
    export PATH="$1":"$PATH"
}

add-path "$HOME/.bin"
add-path "$HOME/.cabal/bin"
add-path "$HOME/.gem/ruby/1.9.1/bin"

################################################################################
# Paths for different GHC versions

function select-ghc() {
    GHC_BASE='/usr/local/ghc'

    if test $# -eq 1 -a -d "$GHC_BASE/ghc-$1"; then
        echo "Selecting $1"
        add-path "$GHC_BASE/ghc-$1/bin:$PATH"
    else
        echo "Usage: select-ghc <GHC version>"
        echo ''
        echo 'Available:'

        ls -1 "$GHC_BASE" | sed 's/^.*-/- /'
    fi
}
