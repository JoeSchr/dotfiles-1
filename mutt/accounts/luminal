set from      = "jasper@luminal.io"
set sendmail  = "msmtp -a Luminal"
set mbox      = "+Luminal/[Gmail].All Mail"
set postponed = "+Luminal/[Gmail].Drafts"

color status green default

macro index d \
    "<save-message>+Personal/[Gmail].Trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+Personal/[Gmail].Spam<enter>"  \
    "mark message as spam"
