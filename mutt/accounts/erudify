set from      = "jasper.van.der.jeugt@erudify.com"
set sendmail  = "msmtp -a Erudify"
set mbox      = "+Erudify/[Gmail].All Mail"
set postponed = "+Erudify/[Gmail].Drafts"

color status green default

macro index d \
    "<save-message>+Erudify/[Gmail].Trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+Erudify/[Gmail].Spam<enter>"  \
    "mark message as spam"
