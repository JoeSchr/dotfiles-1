#!/bin/bash

# Check if a subcommand is specified, otherwise default to build
if [ $# -ge 1 ]; then
    COMMAND=$1
else
    COMMAND=build
fi

# If we have a cabal file
ls *.cabal >/dev/null 2>&1
if [ $? -eq 0 ]; then
    # Continue by invoking cabal
    exec cabal $COMMAND
else
    # Do something else?
    echo 'No cabal file'
    exit 1
fi
